<h1 class="title">Create new category</h1>


<%= render 'share/errors', obj: @category %> 

<%= form_for(@category, :html => {class: "form-horizontal", role: "form"})  do |f| %>
  <div class="form-group">
    <div class="col-sm-2 col-sm-offset-2 control-label">
      <%= f.label :name %>
    </div> 
    <div class="col-sm-4">
      <%= f.text_field :name, class: "form-control", placeholder: "Enter category name", autofocus: true %>
    </div>  
  </div>

  <div class="form-group">
    <div class="col-sm-4 col-sm-push-4">
      <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
<% end %>

