<h1 class="title">Listing All Categories</h1>

<div align="center">
  <% @all_categories.each do |category| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="listing">
            <%= link_to "#{category.name}", category_path(category) %>
          </li>  
        </div>  
      </div>
    </ul>
  <% end %>    
</div>